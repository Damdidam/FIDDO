  <!-- Step 1: Trying app -->
  <div class="card" id="step-loading">
    <div class="logo">F</div>
    <div class="spinner"></div>
    <h1>Ouverture de l'app...</h1>
    <p>Si l'app FIDDO ne s'ouvre pas automatiquement, utilisez le bouton ci-dessous.</p>
    <a class="btn" id="btn-open-app" href="#">Ouvrir l'app FIDDO</a>
    <br>
    <a class="btn-secondary" id="btn-web-fallback" href="#">Continuer sur le web</a>
  </div>

  <script>
    (function() {
      // Extract token from URL: /me/verify/TOKEN
      const parts = window.location.pathname.split('/');
      const token = parts[parts.length - 1];

      if (!token || token === 'verify') {
        window.location.href = '/me';
        return;
      }

      // Deep link URL for the app
      const appUrl = 'fiddo://verify?token=' + encodeURIComponent(token);

      // Web fallback URL
      const webUrl = '/me#verify=' + encodeURIComponent(token);

      // Set button hrefs
      document.getElementById('btn-open-app').href = appUrl;
      document.getElementById('btn-web-fallback').href = webUrl;

      // Try to open app automatically
      var appOpened = false;

      // Listen for visibility change (app opened = page goes hidden)
      document.addEventListener('visibilitychange', function() {
        if (document.hidden) appOpened = true;
      });

      // Try opening the app
      window.location.href = appUrl;

      // If still here after 2.5s, app didn't open
      setTimeout(function() {
        if (!appOpened) {
          // Don't auto-redirect, let user choose
          document.querySelector('h1').textContent = 'App FIDDO non detectee';
          document.querySelector('p').textContent = 'Installez l\'app FIDDO depuis l\'App Store ou le Play Store, ou continuez sur le web.';
        }
      }, 2500);
    })();
  </script>
</body>
